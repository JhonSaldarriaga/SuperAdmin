<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.SearchUserFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ImageView
            android:id="@+id/searchUserBackButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="48dp"
            android:src="@drawable/ic_baseline_keyboard_backspace_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/searchUserTV"
            style="@style/titleFragmentStyle1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="48dp"
            android:text="@string/admin_user_section_edit_user_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/searchUserBackButton" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/search_user_text"
            app:layout_constraintEnd_toEndOf="@+id/searchUserTV"
            app:layout_constraintStart_toStartOf="@+id/searchUserTV"
            app:layout_constraintTop_toBottomOf="@+id/searchUserTV" />

        <Spinner
            android:id="@+id/colabSpinnerSearchUser"
            style="@style/spinnerStyle1"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="@+id/searchUserTV"
            app:layout_constraintStart_toStartOf="@+id/searchUserTV"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            tools:ignore="SpeakableTextPresentCheck" />

        <Spinner
            android:id="@+id/searchBySpinner"
            style="@style/spinnerStyle1"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="@+id/searchUserTV"
            app:layout_constraintStart_toStartOf="@+id/searchUserTV"
            app:layout_constraintTop_toBottomOf="@+id/colabSpinnerSearchUser"
            tools:ignore="SpeakableTextPresentCheck" />

        <Spinner
            android:id="@+id/optionSpinnerSearchUser"
            style="@style/spinnerStyle1"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="@+id/searchUserTV"
            app:layout_constraintStart_toStartOf="@+id/searchUserTV"
            app:layout_constraintTop_toBottomOf="@+id/searchBySpinner"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/searchButton"
            style="@style/buttonStyle1"
            android:layout_width="140dp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="48dp"
            android:text="@string/seach_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/searchUserTV"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="@+id/searchUserTV"
            app:layout_constraintTop_toBottomOf="@+id/optionSpinnerSearchUser"
            app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>